@article{RepolhoCagliari2021,
  abstract  = {Chaotic dynamical systems are ubiquitous in engineering applications and, in order to help inform the design of such systems, we are interested in optimizing their performance using both plant and control parameters. Given the complex nature of such systems we focus on the use of gradient-based optimization algorithms, since the number of states and design parameters in practical engineering applications can easily exceed the capabilities of gradient-free approaches. Furthermore, optimal design and control of chaotic systems is challenging for gradient-based algorithms, because conventional sensitivity analysis methods (tangent and adjoint) produce unusable gradients. To address this challenge, we present a plant-control optimization framework that uses the least-squares shadowing method to estimate the objective gradient. We illustrate the effectiveness of the optimization framework by applying it to the plant-control design of potential vortices in a box, and demonstrate the robustness of the design process as well as the robustness of the optimized system to perturbations on its initial states and design parameters.},
  author    = {Luiz V. Repolho Cagliari and Jason E. Hicken and Sandipan Mishra},
  doi       = {10.1007/s00158-021-02987-z},
  issn      = {1615-147X},
