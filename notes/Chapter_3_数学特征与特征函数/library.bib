  month    = {6},
  title    = {Applications of large deviation theory in geophysical fluid dynamics and climate science},
  url      = {http://arxiv.org/abs/2106.13546 http://dx.doi.org/10.1007/s40766-021-00020-z},
  year     = {2021}
}
